SRCS 				= $(wildcard *.c)

OBJS 				= $(SRCS:.c=.o)

NAME 				= libft.a
CC 					= gcc
CFLAGS 				= -Wall -Wextra -Werror
LIBC 				= ar rcs
RM 					= rm -f

.c.o: 
					@${CC} ${CFLAGS} -c $< -o ${<:.c=.o}

${NAME}:			${OBJS}
					@${LIBC} ${NAME} ${OBJS}

all: 				@${NAME}

clean:				
					@${RM} ${OBJS} ${OBJSB}

fclean:				clean
					@${RM} ${NAME} ${bonus}

re:					fclean all

.PHONY : all clean fclean re

